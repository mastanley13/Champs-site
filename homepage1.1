<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Champion Dog Products - Premium Pet Care Services</title>
    
    <!-- SEO Meta Tags -->
    <meta name="description" content="Champion Dog Products offers premium pet care services including daycare, boarding, grooming, training, and supplies. Experience the Champion difference today.">
    
    <!-- Preload Critical Assets -->
    <link rel="preload" href="fonts/your-main-font.woff2" as="font" type="font/woff2" crossorigin>
    
    <!-- Modern CSS Framework (optional) -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    
    <!-- Custom Styles -->
    <style>
        /* Modern CSS Reset and Variables */
        :root {
            --primary-blue: #0066b3;
            --dark-blue: #004c85;
            --light-blue: #2989b4;
            --accent-red: #e31837;
            --dark-red: #c41230;
            --white: #ffffff;
            --off-white: #f8f9fa;
            --light-gray: #f5f7f9;
            --text-gray: #4a5568;
            --heading-font: 'Montserrat', sans-serif;
            --body-font: 'Inter', sans-serif;
        }

        /* Smooth Scrolling and Better Text Rendering */
        html {
            scroll-behavior: smooth;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        /* Modern Container */
        .container {
            max-width: 1440px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Enhanced Hero Section */
        .hero-section {
            position: relative;
            min-height: 80vh;
            display: flex;
            align-items: center;
            background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
                        url('path-to-hero-image.jpg');
            background-size: cover;
            background-position: center;
            color: var(--white);
        }

        /* Floating Appointment Button */
        .floating-cta {
            position: fixed;
            bottom: 30px;
            right: 30px;
            z-index: 100;
            animation: bounce 2s infinite;
        }

        /* Enhanced Training Section */
        .hero-training {
            display: grid;
            grid-template-columns: 1.2fr 1fr;
            gap: 60px;
            padding: 60px;
            background: var(--white);
            border-radius: 30px;
            margin: 60px 0;
            box-shadow: 0 20px 40px rgba(0,0,0,0.08);
            position: relative;
            overflow: hidden;
        }

        /* Animated Background Element */
        .hero-training::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(0,102,179,0.03) 0%, transparent 50%);
            animation: rotate 30s linear infinite;
        }

        .training-content {
            position: relative;
            z-index: 1;
        }

        .training-title {
            font-family: var(--heading-font);
            font-size: clamp(2rem, 5vw, 3.5rem);
            line-height: 1.1;
            color: var(--primary-blue);
            margin-bottom: 40px;
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 0.6s ease forwards;
        }

        .highlight {
            display: block;
            color: var(--accent-red);
            font-size: clamp(2.5rem, 6vw, 4rem);
            font-weight: 800;
            text-transform: uppercase;
            margin-top: 15px;
            position: relative;
        }

        /* Modern Video Button */
        .champion-difference {
            display: inline-flex;
            align-items: center;
            gap: 15px;
            background: var(--primary-blue);
            color: var(--white);
            padding: 20px 40px;
            border-radius: 15px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

        .champion-difference::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, transparent 0%, rgba(255,255,255,0.2) 50%, transparent 100%);
            transform: translateX(-100%);
            transition: transform 0.6s;
        }

        .champion-difference:hover::before {
            transform: translateX(100%);
        }

        .champion-difference:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0,102,179,0.2);
        }

        /* Training Features Grid */
        .training-features {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
            margin-top: 50px;
        }

        .feature-card {
            background: var(--off-white);
            padding: 30px;
            border-radius: 20px;
            transition: all 0.3s ease;
        }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }

        /* Testimonials Slider */
        .testimonials-slider {
            margin-top: 60px;
            overflow: hidden;
            position: relative;
        }

        /* Advanced Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes rotate {
            from {
                transform: rotate(0deg);
            }
            to {
                transform: rotate(360deg);
            }
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .hero-training {
                grid-template-columns: 1fr;
                padding: 40px;
            }

            .training-features {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 768px) {
            .training-features {
                grid-template-columns: 1fr;
            }

            .training-title {
                font-size: clamp(1.8rem, 4vw, 2.5rem);
            }

            .highlight {
                font-size: clamp(2rem, 5vw, 3rem);
            }
        }

        /* Loading States and Transitions */
        .lazy-load {
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .lazy-load.loaded {
            opacity: 1;
        }
    </style>
</head>
<body>
    <!-- Add JavaScript for enhanced functionality -->
    <script>
        // Intersection Observer for scroll animations
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate');
                }
            });
        }, {
            threshold: 0.1
        });

        // Lazy loading images
        document.addEventListener('DOMContentLoaded', function() {
            const lazyImages = document.querySelectorAll('.lazy-load');
            lazyImages.forEach(img => observer.observe(img));
        });

        // Smooth scroll handling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
</body>
</html>
